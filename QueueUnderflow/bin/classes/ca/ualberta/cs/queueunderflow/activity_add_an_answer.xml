<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddAnAnswerActivity" >

    <EditText
        android:id="@+id/AddAnswerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/AddAnAnswerButton"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/AddAnAnswerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Add" />

    <LinearLayout
        android:id="@+id/answerConstantLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/questionLayout"
        android:paddingBottom="5dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/answersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answers :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="19sp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/answersExpListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddAnswerEditText"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/answerConstantLayout" >

    </ExpandableListView>

    <LinearLayout
        android:id="@+id/questionLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/upvoteBtn"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:paddingBottom="0dp"
                android:src="@drawable/item_upvote_btn" />

            <TextView
                android:id="@+id/upvoteDisplay"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upvoteBtn"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:paddingTop="0dp"
                android:text="100"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Question" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/authorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/authorTextView"
                    android:text="Date"
                    android:textSize="9sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <CheckBox
                    android:id="@+id/favBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/replyBtn"
                    android:button="@drawable/favorite"
                    android:clickable="true" />

                <CheckBox
                    android:id="@+id/offlineBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/replyBtn"
                    android:layout_toRightOf="@+id/favBtn"
                    android:button="@drawable/offline"
                    android:clickable="true" />

                <ImageButton
                    android:id="@+id/answerBtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/replyBtn"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/item_answer_btn" />

                <ImageButton
                    android:id="@+id/replyBtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/offlineBtn"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/item_reply_btn" />

                <ImageButton
                    android:id="@+id/hasPictureIcon"
                    android:layout_width="19dp"
                    android:layout_height="17dp"
                    android:layout_alignBottom="@+id/replyBtn"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:src="@drawable/item_picture_indicator"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>